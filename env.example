# JobPilot Environment Configuration
# Copy this file to .env and fill in your values

# Anthropic API (Required for CV generation)
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Bright Data API (Required for job scraping)
BRIGHT_DATA_API_KEY=your-bright-data-api-key
BRIGHT_DATA_ZONE=mcp_unlocker

# Optional: Database URL (defaults to SQLite)
# DATABASE_URL=postgresql://user:password@localhost:5432/jobpilot

# Optional: Redis for caching (defaults to in-memory cache)
# REDIS_URL=redis://localhost:6379/0

